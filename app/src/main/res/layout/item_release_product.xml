<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <ImageView
            android:id="@+id/iv_item_release_product_image"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@drawable/style_rounded_corner"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/release_info_product1" />

        <ImageView
            android:id="@+id/iv_item_release_product_bookmark"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_outline_bookmark_border_24"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/iv_item_release_product_image"
            app:layout_constraintTop_toTopOf="@+id/iv_item_release_product_image" />

        <TextView
            android:id="@+id/tv_item_release_product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_item_release_product_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_release_product_image"
            tools:text="Nike" />

        <TextView
            android:id="@+id/tv_item_release_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_item_release_product_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_release_product_brand"
            tools:text="Nike x Tiffany &amp; Co. Air Force 1 Low SP Black Tiffany Blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>