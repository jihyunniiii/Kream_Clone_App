<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_product_image1"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/style_rounded_corner"
            android:clipToOutline="true"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@+id/iv_item_product_image2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/women_for_women_product1" />

        <ImageView
            android:id="@+id/iv_item_product_bookmark1"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_outline_bookmark_border_24"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_product_image1"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/iv_item_product_image1" />

        <TextView
            android:id="@+id/tv_item_product_brand1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image1"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_product_image1"
            tools:text="Nike" />

        <TextView
            android:id="@+id/tv_item_product_title1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image1"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_product_brand1"
            tools:text="(W) Nike Classic Cortez Leather White Black" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_quick_delivery1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/light_green"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image1"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_product_title1">

            <ImageView
                android:id="@+id/iv_quick_delivery_image1"
                android:layout_width="12dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_baseline_flash_on_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/green" />

            <TextView
                android:id="@+id/tv_quick_delivery_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:text="@string/item_product_quick_delivery"
                android:textColor="@color/green"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/iv_quick_delivery_image1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_item_product_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image1"
            app:layout_constraintTop_toBottomOf="@+id/layout_quick_delivery1"
            tools:text="176,000원" />

        <TextView
            android:id="@+id/tv_item_product_immediate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/item_product_immediate_purchase_price"
            android:textColor="@color/dark_gray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image1"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_product_price1" />

        <ImageView
            android:id="@+id/iv_item_product_image2"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/style_rounded_corner"
            android:clipToOutline="true"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_item_product_image1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/women_for_women_product2" />

        <ImageView
            android:id="@+id/iv_item_product_bookmark2"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_outline_bookmark_border_24"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_product_image2"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/iv_item_product_image2" />

        <TextView
            android:id="@+id/tv_item_product_brand2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image2"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_product_image2"
            tools:text="Nike" />

        <TextView
            android:id="@+id/tv_item_product_title2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image2"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_product_brand2"
            tools:text="Nike x Stussy Washed Fleece Pants Black (DO5296-010)" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_quick_delivery2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/light_green"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image2"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_product_title2">

            <ImageView
                android:id="@+id/iv_quick_delivery_image2"
                android:layout_width="12dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_baseline_flash_on_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/green" />

            <TextView
                android:id="@+id/tv_quick_delivery_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:text="@string/item_product_quick_delivery"
                android:textColor="@color/green"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/iv_quick_delivery_image2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_item_product_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image2"
            app:layout_constraintTop_toBottomOf="@+id/layout_quick_delivery2"
            tools:text="119,000원" />

        <TextView
            android:id="@+id/tv_item_product_immediate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/item_product_immediate_purchase_price"
            android:textColor="@color/dark_gray"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_item_product_image2"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_product_price2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>